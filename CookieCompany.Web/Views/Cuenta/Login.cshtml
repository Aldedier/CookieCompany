@model CookieCompany.Model.Fluent.SingOn
@{
                /**/

                Layout = "~/Views/Shared/_LoginPage.cshtml";
                ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="card card-container">
            <img id="profile-img" class="profile-img-card" src="~/Imagenes/goku.jpg" />
            <form class="form-signin row">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group col-md-12">
                    @Html.Label("Usuario", htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Digite su usuario", id = "inputEmail" } })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-12">
                    @Html.Label("Contraseña", htmlAttributes: new { @class = "control-label col-md-12", id = "inputPassword" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Digite su contraseña" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-12">
                    <div class="col-md-12">
                        <input type="submit" value="Iniciar sesión" class="btn btn-lg btn-primary btn-block btn-signin"/>
                    </div>
                </div>
            </form><!-- /form -->
        </div><!-- /card-container -->
    </div><!-- /container -->
}


